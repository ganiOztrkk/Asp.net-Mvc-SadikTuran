@using BlogMvcApp.Models
@model IEnumerable<Blog>

@{
    ViewBag.Title = "Index";
}


<h2>Blog List</h2>
<hr/>

<p>
    @Html.ActionLink("Create New", "Create", null, new{@class="btn btn-primary"})
</p>

@if (TempData["Blog"] != null)
{
    var blog = (Blog)TempData["Blog"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span>"@blog.Title"</strong> Has Been Updated...
    </div>
}

<table class="table table-bordered table-hover"  style="text-align: center" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th style="width: 180px">
            @Html.DisplayNameFor(model => model.Homepage)
        </th>
        <th>
            Edit
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @if (item.Status)
                {
                    <label class="btn btn-success" style="width: 100px;">Approved</label>
                }
                else
                {
            <label class="btn btn-warning" style="width: 100px">Unapproved</label>
                }
            </td>
            <td>
                @if (item.Homepage)
                {
                    <label class="btn btn-success" style="width: 150px">Homepage</label>
                }
                else
                {
                    <label class="btn btn-danger" style="width: 150px">Not Homepage</label>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
